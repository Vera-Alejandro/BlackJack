<Window x:Class="BlackJack.v3.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack.v3"
        mc:Ignorable="d"
        Title="Profile" Height="450" Width="300"
        ResizeMode="NoResize">
    <Border BorderBrush="White" BorderThickness="2">
        <Grid Background="Black" >
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 125 0 0 " Orientation="Horizontal">
                <Label Content="Currently Logged in as:" Foreground="White" FontSize="15"/>
                <Label Content="Guest" Foreground="White" FontSize="15"/>
            </StackPanel>

            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 250 0 0 " Height="110" Width="210">
                <Button x:Name="LogIn" Height="50" Width="100" Foreground="White" Background="Black" Content="Log In" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LogIn_OnClick"/>
                <Button x:Name="SignUp" Height="50" Width="100" Foreground="White" Background="Black" Content="Sign Up" FontSize="15" HorizontalAlignment="Right" VerticalAlignment="Top" Click="SignUp_OnClick"/>
                <Button x:Name="AddFunds" Height="50" Width="100" Foreground="White" Background="Black" Content="Funds" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="AddFunds_OnClick"/>
                <Button x:Name="Info" Height="50" Width="100" Foreground="White" Background="Black" Content="Info" FontSize="15" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Info_OnClick"/>
            </Grid>
        </Grid>
    </Border>
</Window>
